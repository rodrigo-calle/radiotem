    }
    .first-section-container__header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        width: 100%;
        padding: 0px 0px;
        margin: 0 auto;
        grid-area: header;
    }

    .logo-container {
        width: 40%;
        display: flex;
        align-items: center;
    }
    .img {
        width: 480px;
        height: 140px;
    }
    .first-section-navbar {
        display: flex;
        flex-direction: row;
        color: #fff;
        justify-content: flex-start;
        align-items: center;
        flex-wrap: wrap;
        width: 50%;
    }
    .first-section-navbar__item {
        padding: 15px;
        font-weight: 600;
        text-decoration: none;
        color: #fff;
        font-size: 30px;
    }
    .first-section-body {
        display: grid;
        /* flex-direction: row; */
        /* justify-content: space-between; */
        height: 700px;
        padding: 0px;
        grid-area: body;
        grid-template-columns: repeat(13, 1fr);
        grid-template-rows: repeat(8, 1fr);
        grid-template-areas: 
        ". . . . . . . img-container img-container img-container img-container img-container img-container"
