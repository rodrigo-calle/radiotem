        ;
    }

    .first-section-body__description-container {
        width: 100%;
        display: flex;
        flex-direction: column;
        grid-area: description;
    }
    .description-container__header {
        background-color: #fff; 
        color: #26619C;  
        padding: 10px; 
        border-radius: 100px 10px / 190px;
        margin: 5px 0px 10px 0px;
        grid-area: title;
    }
    .description-container__header h3 {
        margin: 0;
        text-align: center;
        font-weight: bold;
        line-height: 28px;
        
    }

    .first-section-body__description-container .list-container__group {
        padding-left: 70px;
        color: #fff;
    }
    .list-container__group-item {
        line-height: 30px;
        margin: 0px 0px;
    }
    .description-container__button-container {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .description-container__button-container button{
        color: #26619C;
        background-color: #fff;
        padding: 6px 35px;
        border-radius: 20px;
        font-weight: 600;
        border: none;
        font-size: 38px;
        line-height: 38px;
        font-family: boldLetter;
    }

    .first-section-body__image-container {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        grid-area: img-container;
    }

    .first-section-body__image-container img {
        width: 100%;
        height: 100%;
    }

